{
  "name": "@openmind/zero-events",
  "version": "1.1.0",
  "description": "The openmind events management",
  "repository": {
    "type": "git",
    "url": "https://github.com/openmindlab/zero-events"
  },
  "main": "build/zero-events.js",
  "author": "openmind Lab",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "babel-loader": "^8.0.5",
    "dmd-bitbucket": "^0.1.10",
    "dmd-globals-docs": "^1.0.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-compat": "^2.7.0",
    "eslint-plugin-import": "^2.16.0",
    "jest": "^24.1.0",
    "jest-coverage-badges": "^1.1.2",
    "jquery": "^3.3.1",
    "jsdoc-to-markdown": "^4.0.1",
    "semver": "5.5.0",
    "webpack": "4.27.1",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.11",
    "webpack-merge": "4.1.5",
    "webpack-stream": "5.2.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "dev": "webpack-dev-server --config webpack-dev.js",
    "build": "webpack --config webpack-prod.js",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage  && jest-coverage-badges",
    "docs": "jsdoc2md --plugin dmd-globals-docs --template README.hbs --files src/**/*.js > README.md",
    "lint": "node_modules/.bin/eslint ./src"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/sample/**",
      "!**/jest-coverage-report/**",
      "!webpack.*.js"
    ],
    "coverageReporters": [
      "json-summary"
    ]
  }
}
